{
  "name": "vscode-forge",
  "displayName": "Forge",
  "description": "Manage versions with Forge CLI",
  "version": "1.0.0",
  "publisher": "alexjoedt",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexjoedt/vscode-forge"
  },
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "keywords": [
    "forge",
    "versioning",
    "semver",
    "calver",
    "docker",
    "build",
    "release",
    "tag",
    "git"
  ],
  "activationEvents": [
    "workspaceContains:**/forge.yaml",
    "workspaceContains:**/.forge.yaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "forge.init",
        "title": "Initialize Configuration",
        "category": "Forge",
        "icon": "$(file-add)"
      },
      {
        "command": "forge.createTag",
        "title": "Create Tag (Wizard)",
        "category": "Forge",
        "icon": "$(tag-add)"
      },
      {
        "command": "forge.createTagPatch",
        "title": "Create Patch Tag",
        "category": "Forge",
        "icon": "$(bug)"
      },
      {
        "command": "forge.createTagMinor",
        "title": "Create Minor Tag",
        "category": "Forge",
        "icon": "$(package)"
      },
      {
        "command": "forge.createTagMajor",
        "title": "Create Major Tag",
        "category": "Forge",
        "icon": "$(rocket)"
      },
      {
        "command": "forge.createTagAndPush",
        "title": "Create Tag and Push",
        "category": "Forge",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "forge.showVersionInfo",
        "title": "Show Version Info",
        "category": "Forge",
        "icon": "$(info)"
      },
      {
        "command": "forge.showTagDetails",
        "title": "Show Tag Details",
        "category": "Forge"
      },
      {
        "command": "forge.refreshVersionHistory",
        "title": "Refresh",
        "category": "Forge",
        "icon": "$(refresh)"
      },
      {
        "command": "forge.selectApp",
        "title": "Select App",
        "category": "Forge",
        "icon": "$(folder)"
      },
      {
        "command": "forge.showOutput",
        "title": "Show Output",
        "category": "Forge",
        "icon": "$(output)"
      },
      {
        "command": "forge.install",
        "title": "Install Forge CLI (with Go)",
        "category": "Forge"
      },
      {
        "command": "forge.build",
        "title": "Build Binaries",
        "category": "Forge",
        "icon": "$(tools)"
      },
      {
        "command": "forge.buildImage",
        "title": "Build Docker Image",
        "category": "Forge",
        "icon": "$(package)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "forge",
          "title": "Forge",
          "icon": "$(tag)"
        }
      ]
    },
    "views": {
      "forge": [
        {
          "id": "forgeVersionHistory",
          "name": "Version History",
          "icon": "$(tag)",
          "contextualTitle": "Forge Version History"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "forgeVersionHistory",
        "contents": "No forge.yaml configuration found.\n[Initialize Configuration](command:forge.init)\nTo learn more about Forge, [read the documentation](https://github.com/alexjoedt/forge)."
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "forge.createTag",
          "when": "view == forgeVersionHistory",
          "group": "navigation@1"
        },
        {
          "command": "forge.refreshVersionHistory",
          "when": "view == forgeVersionHistory",
          "group": "navigation@2"
        },
        {
          "command": "forge.selectApp",
          "when": "view == forgeVersionHistory",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "forge.showTagDetails",
          "when": "view == forgeVersionHistory && viewItem == forgeTag",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "forge.showTagDetails",
          "when": "false"
        }
      ]
    },
    "configuration": {
      "title": "Forge",
      "properties": {
        "forge.autoDetectConfiguration": {
          "type": "boolean",
          "default": true,
          "description": "Automatically detect forge.yaml configuration in workspace"
        },
        "forge.showVersionInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show current version in status bar"
        },
        "forge.confirmBeforePush": {
          "type": "boolean",
          "default": true,
          "description": "Show confirmation dialog before pushing tags"
        },
        "forge.validateOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Validate forge.yaml when file is saved"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "yaml": "^2.8.1"
  }
}
